{
  "name": "@xmtp/bot-tools",
  "version": "1.0.0",
  "description": "A collection of tools for running high quality bots in Node.js",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "build": "yarn build:grpc && yarn build:botkit && yarn build:examples",
    "build:grpc": "yarn workspace @xmtp/grpc-api-client build",
    "build:botkit": "yarn workspace @xmtp/bot-kit-pro build",
    "build:examples": "yarn workspace @xmtp/bot-examples build",
    "publish": "yarn build && changeset publish",
    "test:grpc": "yarn workspace @xmtp/grpc-api-client test",
    "test:botkit": "yarn workspace @xmtp/bot-kit-pro test",
    "test:examples": "yarn workspace @xmtp/bot-examples test",
    "test": "yarn test:grpc && yarn test:botkit && yarn test:examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xmtp/bot-tools-js.git"
  },
  "keywords": [
    "xmtp",
    "bots",
    "node",
    "messaging"
  ],
  "author": "XMTP Engineering <eng@xmtp.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xmtp/bot-kit-pro/issues"
  },
  "homepage": "https://github.com/xmtp/bot-kit-pro#readme",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vitest": "^0.3.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6",
    "vitest": "^0.34.3"
  },
  "packageManager": "yarn@3.6.3"
}
