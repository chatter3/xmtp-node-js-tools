{
  "name": "@xmtp/bot-tools",
  "version": "1.0.0",
  "description": "A collection of tools for running high quality bots in Node.js",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "build": "yarn build:grpc && yarn build:botkit && yarn build:examples",
    "build:grpc": "yarn workspace @xmtp/grpc-api-client build",
    "build:botkit": "yarn workspace @xmtp/bot-kit-pro build",
    "build:examples": "yarn workspace @xmtp/bot-examples build",
    "test": "yarn workspaces run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xmtp/bot-tools-js.git"
  },
  "keywords": [
    "xmtp",
    "bots",
    "node",
    "messaging"
  ],
  "author": "XMTP Engineering <eng@xmtp.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xmtp/bot-kit-pro/issues"
  },
  "homepage": "https://github.com/xmtp/bot-kit-pro#readme",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "packageManager": "yarn@3.6.3"
}
